{
  "author": "Robert Lindley",
  "bin": {
    "ddd": "dist/cli.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.2.0",
    "commander": "^11.0.0",
    "js-yaml": "^4.1.0",
    "pino": "^8.17.2",
    "pino-pretty": "^13.1.1"
  },
  "description": "CLI tools for the Documentation-Driven Development framework",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "lint-staged": "^14.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "document-driven-development",
    "ddd",
    "ai",
    "agents",
    "agent-instructions",
    "documentation-driven",
    "software-automation"
  ],
  "license": "MIT",
  "lint-staged": {
    "**/*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "dist/cli.js",
  "name": "@coderrob/ddd-kit",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node src/cli.ts",
    "format": "prettier --write '**/*.{ts,js,json,md,mdx,mdown,markdown,yml,yaml}'",
    "format:check": "prettier --check '**/*.{ts,js,json,md,mdx,mdown,markdown,yml,yaml}'",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:ci": "eslint src/**/*.{ts,js} --max-warnings=0",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "prepare": "husky install",
    "cli": "node dist/cli.js",
    "test": "jest --runInBand --coverage"
  },
  "version": "0.1.0"
}
